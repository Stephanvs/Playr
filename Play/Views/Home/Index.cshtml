<div class="backdrop" ng-controller="BackdropController"></div>

<div class="container" ng-controller="PlayController">
    <div class="now-playing">
        <div class="album-art">
            <a href="#">
                <img ng-src="{{CurrentTrack.ArtworkUrl}}" class="image" alt="">
            </a>
        </div>

        <div class="song-info">
            <h1 class="artist">{{CurrentTrack.Artist}}</h1>
            <h2 class="song-title">{{CurrentTrack.Title}}</h2>
            <h2 class="album-title">{{CurrentTrack.Album}}</h2>
        </div>
    </div>
    
    <section class="controls">
        <div class="">
            <span data-icon="previous"><a href="" ng-click="previous()">&#9194;</a></span>
            <span data-icon="play-pause">&#9654;&#8214;</span>
            <span data-icon="next">&#9193;</span>
            <span data-icon="stop">&#9632;</span>
            <span data-icon="loop">&#128257;</span>
        </div>
    </section>

    <section class="playlist">
        
        <ul class="unstyled">
            <li class="now-playing">
                <div class="status">
                    <span data-icon="music">&#9835;</span>
                </div>
                <div class="song">
                    <div class="song-title">The Remedy</div>
                    <div class="song-artist">Jason Mraz</div>
                </div>
            </li>
        </ul>

    </section>

</div>
