<!DOCTYPE html>
<html lang="en" ng-app>
<head>
    <meta charset="utf-8" />
    <title>Play</title>
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />
    <meta name="viewport" content="width=device-width" />
    <link href='http://fonts.googleapis.com/css?family=Open+Sans:400,300,600,700' rel='stylesheet' type='text/css'>
    @Styles.Render("~/assets/styles")
    @Styles.Render("~/assets/styles/bootstrap")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>

    <div class="navbar-wrapper">
        <!-- Wrap the .navbar in .container to center it within the absolutely positioned parent. -->
        <div class="container">

            <div class="navbar navbar-inverse">
                <div class="navbar-inner">
                    <!-- Responsive Navbar Part 1: Button for triggering responsive navbar (not covered in tutorial). Include responsive CSS to utilize. -->
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="#">Play</a>
                    <!-- Responsive Navbar Part 2: Place all navbar contents you want collapsed withing .navbar-collapse.collapse. -->
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li><a href="#">Library</a></li>
                            <li class="active"><a href="#">Now Playing</a></li>
                        </ul>
                        <ul class="nav pull-right">
                            <li>
                                <form class="navbar-search">
                                    <input type="text" class="search-query" ng-model="search" placeholder="Search">
                                </form>
                            </li>
                        </ul>
                    </div>
                    <!--/.nav-collapse -->
                </div>
                <!-- /.navbar-inner -->
            </div>
            <!-- /.navbar -->

        </div>
        <!-- /.container -->
    </div>

    @RenderBody()

    <div class="footer">
        <footer>
            <p>© 2012 Hayman · <a href="#">Privacy</a> · <a href="#">Terms</a></p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/assets/scripts/bootstrap")
    <script src="http://ajax.googleapis.com/ajax/libs/angularjs/1.0.3/angular.min.js"></script>
    @RenderSection("scripts", required: false)
    <script src="@(Play.Helpers.GetNotificationUrl() + "/signalr/hubs")"></script>
</body>
</html>
